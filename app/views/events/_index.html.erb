<h1>Club Calendar <%= Time.now.year %></h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Logo</th>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
    <% if event.date.future? | event.date.today? %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.logo %></td>
        <td><%= event.title %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
